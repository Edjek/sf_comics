{% extends 'base.html.twig' %}

{% block title %}Comic
{% endblock %}

{% block body %}
	<div class="container mt-5">

		<div class="my-3">
			<a href="{{ path('main') }}" class="btn btn-outline-primary">
				Accueil
			</a>
			<a href="{{ path('comics_list') }}" class="btn btn-outline-primary">
				Liste des comics
			</a>
		</div>

		<div class="border p-5">
			<h1>{{ comic.title }}</h1>
			<p>{{ comic.description }}</p>
			<p>{{ comic.writer.name }}</p>
			<p>{{ comic.designer.name }}</p>
			<p>{{ comic.licence.name }}</p>
			<p>{{ comic.editor.name }}</p>
			<p>{{ comic.year | date('d-m-Y')}}</p>
			<p>
				{% for image in comic.images %}<img src="{{ asset('media/'~image.src) }}" alt="" width="100px">
				{% endfor %}
			</p>
		</div>
	</div>

{% endblock %}
