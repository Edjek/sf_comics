{% if app.user.roles == 'admin' %}
	{% extends 'admin/base.html.twig' %}
{% else %}
	{% extends 'base.html.twig' %}
{% endif %}

{% block title %}User
{% endblock %}

{% block body %}

	<div class="container">
		<div class="my-3">
			<a href="{{ path('main') }}" class="btn btn-outline-primary">
				Accueil
			</a>
		</div>

		{{ form_start(userForm) }}
		<div class="mb-3">
			{{ form_label(userForm.name, 'Name : ', {'label_attr' : { 'class' : 'form-label' } } ) }}
			{{ form_widget(userForm.name, {'attr' : {'class' : 'form-control'} } ) }}
		</div>

		<div class="mb-3">
			{{ form_label(userForm.firstname, 'Firstname : ', {'label_attr' : { 'class' : 'form-label' } } ) }}
			{{ form_widget(userForm.firstname, {'attr' : {'class' : 'form-control'} } ) }}
		</div>

		<div class="mb-3">
			{{ form_label(userForm.email, 'Email : ', {'label_attr' : { 'class' : 'form-label' } } ) }}
			{{ form_widget(userForm.email, {'attr' : { 'class' : 'form-control'} } ) }}
		</div>

		<div class="mb-3">
			{{ form_label(userForm.password, 'Password : ', {'label_attr' : { 'class' : 'form-label' } } ) }}
			{{ form_widget(userForm.password, {'attr' : { 'class' : 'form-control'} } ) }}
		</div>

		{{ form_widget(userForm.enregistrer, { 'attr' : {'class' : 'btn btn-outline-primary'} } ) }}

		{{ form_end(userForm) }}
	</div>

{% endblock %}
